<table id="datatable" class="table table-striped table-bordered">
  <thead>
	  <tr>
	    <th><%= Group.human_attribute_name(:name) %></th>
	    <th><%= Group.human_attribute_name(:author) %></th>
	    <th><%= Group.human_attribute_name(:users) %></th>
	  </tr>  	
  </thead>
  <tbody>
		<% groups.each do |group| %>
		  <tr>
		    <td>
					<%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-trash"), group_path(group), :method => :delete, :class => "btn btn-mini btn-danger", :data => { :confirm => dt("#{controller_name}.#{action_name}.confirm") } %>
					<%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-edit"), edit_group_path(group), :class => 'btn btn-small btn-primary' %>
					<%= link_to group.name, group_path(group) %>
				</td>
				<td><%= link_to group.author.name, user_path(group.author) %></td>
				<td><%= comma_separated_links_for(group.users.to_a) %></td>
		  </tr>
		<% end %>
  </tbody>
</table>
