<%# add navigation links to this file %>
<% if user_signed_in? %>
	<li class="<%= 'active' if controller_name.eql?('topics') %>"><%= link_to Topic.model_name.human(:count => 2), topics_path %></li>
	<li class="<%= 'active' if controller_name.eql?('pages') %>"><%= link_to Page.model_name.human(:count => 2), pages_path %></li>
	<li class="<%= 'active' if controller_name.eql?('things') %>"><%= link_to Thing.model_name.human(:count => 2), things_path %></li>
	<li class="<%= 'active' if controller_name.eql?('groups') %>"><%= link_to Group.model_name.human(:count => 2), groups_path %></li>
	<li class="<%= 'active' if controller_name.eql?('users') and @user != current_user %>"><%= link_to User.model_name.human(:count => 2), users_path %></li>
	<li class="<%= 'active' if controller_name.eql?('users') and action_name.eql?('show') and @user == current_user %>"><%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-home"), root_path %></li>
	<li class="dropdown <%= 'active' if controller_name.eql?('registrations') %>">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
		<ul class="dropdown-menu" role="menu">
			<li><%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-user") + " " + dt('navbar.profile'), edit_user_registration_url %></li>
			<li><%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-log-out") + " " + dt('navbar.signout'), destroy_user_session_path, :method => :delete, :id => "sign_out" %></li>
		</ul>
	</li>
<% end %>
