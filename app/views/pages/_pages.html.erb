<table id="datatable" class="table table-striped table-bordered">
  <thead>
      <tr>
        <th>Topic</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
  </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr> 
          <td><%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-trash"), page_path(page), :method => :delete, :class => "btn btn-mini btn-danger btn-xs", :data => { :confirm => dt("#{controller_name}.#{action_name}.confirm") } %>
              <%= link_to content_tag(:span, "", :class => "glyphicon glyphicon-edit"), edit_page_path(page), :class => 'btn btn-small btn-primary btn-xs' %>
              <%= page.topic %>
          </td>
          <td><%= page.name %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>