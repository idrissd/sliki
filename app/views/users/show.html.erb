<div class="pull-right">
	<button type="button" id='clip_button' data-clipboard-text="<%= user_url(@user) %>" title='Copy link to clipboard.' class="btn btn-default" aria-label="Copy link to clipboard.">
	  <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
	</button>
</div>
<h1><%= dt("#{controller_name}.#{action_name}.title", :model => dt("#{controller_name}.#{action_name}.model"), :instance => @user.name) %></h1>
<%= render :partial => "show", :locals => { :item => @user } %>
