<%= simple_form_for(@thing) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :topic %>
    <%= f.input :name %>
    <%= f.input :color %>
    <%= f.input :position %>
    <%= f.input :x %>
    <%= f.input :y %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
