<h1>Listing things</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Name</th>
      <th>Color</th>
      <th>Position</th>
      <th>X</th>
      <th>Y</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.topic %></td>
        <td><%= thing.name %></td>
        <td><%= thing.color %></td>
        <td><%= thing.position %></td>
        <td><%= thing.x %></td>
        <td><%= thing.y %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>
